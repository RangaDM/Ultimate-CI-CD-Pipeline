pipeline {
    agent {
        docker {
            image 'rangadm/node:20.9.0-alpine'
            args '-v $HOME/.npm:/root/.npm'
        }
    }
    stages {
        stage('Check Node.js Version') {
            steps {
                sh 'node --version'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
        stage('Test') {
            steps {
                sh 'npm test'
            }
        }
    }
    post {
        success {
            echo 'Congratulations! The build was successful.'
        }
    }
}
